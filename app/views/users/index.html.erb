<h1>Listing users</h1>

<table class="table table-striped table-hover">
  <tr>
    <th>Twitter</th>
    <th>Last Fetched</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td>@<%= user.twitter %></td>
    <td><%= user.last_cached %></td>
    <td>
      <div class="btn-group">
        <%= link_to 'Show', user, :class => "btn btn-small" %>
        <%= link_to 'Edit', edit_user_path(user), :class => "btn btn-small" %>
        <%= link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-small" %>
      </div>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path, :class => "btn" %>
